<div class="card mb-4 mb-md-0">
  <div class="card-body">
    <div class="row">
      <div class="col-md-10">
        <h5>Credit Card</h5>
      </div>
      <div class="col-md-2">
        <%= link_to "Edit", edit_credit_card_path(credit_card), class: "text-success" %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <p class="mb-0">Credit Card Number</p>
      </div>
      <div class="col-sm-6">
        <p class="text-muted mb-0"><%= credit_card.number.present? ? (("*" * 12) + credit_card.number.last(4)) : "" %> </p>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-sm-6">
        <p class="mb-0">Expiration Date</p>
      </div>
      <div class="col-sm-6">
        <p class="text-muted mb-0"><%= credit_card.month.to_s + "/" + credit_card.year.to_s %></p>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-sm-6">
        <p class="mb-0">CVV</p>
      </div>
      <div class="col-sm-6">
        <p class="text-muted mb-0"><%= credit_card.cvv.present? ? "*" * credit_card.cvv.to_s.length : "" %></p>
      </div>
    </div>
  </div>
</div>
