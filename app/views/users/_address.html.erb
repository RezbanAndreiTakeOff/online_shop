<div class="row mb-4">
  <div class="card mb-4 mb-md-0">
    <div class="card-body">
      <div class="row">
        <div class="col-md-11">
          <h5><%= address_type %> Address</h5>
        </div>
        <div class="col-md-1">
          <%= link_to "Edit", edit_link, class: "text-success" %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4">
          <p class="mb-0">Street Address</p>
        </div>
        <div class="col-sm-8">
          <p class="text-muted mb-0"><%= address.street_address %></p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-4">
          <p class="mb-0">City</p>
        </div>
        <div class="col-sm-8">
          <p class="text-muted mb-0"><%= address.city %></p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-4">
          <p class="mb-0">State</p>
        </div>
        <div class="col-sm-8">
          <p class="text-muted mb-0"><%= address.state %></p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-4">
          <p class="mb-0">Postal Code</p>
        </div>
        <div class="col-sm-8">
          <p class="text-muted mb-0"><%= address.postal_code %></p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-4">
          <p class="mb-0">Country</p>
        </div>
        <div class="col-sm-8">
          <p class="text-muted mb-0"><%= address.country %></p>
        </div>
      </div>
    </div>
  </div>
</div>
