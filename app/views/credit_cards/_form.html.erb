<%= form_for(@credit_card) do |f| %>
  <div class="form-outline mb-4">
    <%= f.number_field :number, autofocus: true, required: true, class: "form-control", placeholder: "Credit Card Number"%>
  </div>
  <br>
  <div class="form-outline mb-4">
    <%= f.number_field :month, required: true, class: "form-control", placeholder: "Expiration Month"%>
  </div>
  <br>
  <div class="form-outline mb-4">
    <%= f.number_field :year, required: true, class: "form-control", placeholder: "Expiration Year"%>
  </div>
  <br>
  <div class="form-outline mb-4">
    <%= f.number_field :cvv, required: true, class: "form-control", placeholder: "CVV"%>
  </div>
  <br>

  <div class="actions">
    <%= f.submit "Update", class: "btn btn-primary btn-block mb-4" %>
  </div>
<% end %>
