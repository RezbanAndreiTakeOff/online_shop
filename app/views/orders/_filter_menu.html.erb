<!-- _filter_menu.html.erb -->
<%= form_tag orders_path, method: :get, class: 'form-inline', id: 'orders-form' do %>
  <div class="form-group mb-2">
    <%= label_tag :status, 'Filter by status:' %>
    <%= select_tag :status, options_for_select(['shipped', 'not shipped'], params[:status]), prompt: 'All'%>
    <%= submit_tag 'Filter', class: 'btn btn-primary mb-2' %>
  </div>

<% end %>
